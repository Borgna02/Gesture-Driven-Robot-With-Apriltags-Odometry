[
    {
        "type" : "Container",
        "title" : "Networks stat",
        "id" : "ROBOT_NETWORK_CHART",
        "html" : 
        {
            "template" : "chartjs/chart-container.html",
            "defaultsForVariables":
            {
                "ATTRIBUTES" : "style='min-width:100%; min-height:30vh'"
            }
        },
        "init" :
        {
            "template" : "chartjs/init-bar-livechart.js",
            "defaultsForVariables" :
            {
                "LABELS" : $$networks$$,
                "MIN" : "0",
                "MAX" : "1",
                "UDM" : "MB/s",
                "INDEX_AXIS" : "y"
            }
        },
        "tick" :
        {
            "interval" : 1.0,
            "template" : "chartjs/tick-bar-livechart.js"
        },
        "widgets" :
        [
            {
                "type" : "Widget",
                "mode" : "Value",
                "dbName" : "Main",
                "key" : "networks_tx",
                "init" :
                {
                    "template" : "chartjs/init-bar-livechart-val.js",
                    "defaultsForVariables" :
                    {
                        "LABEL" : "TX",
                        "BG_COLOR" : "red"
                    }
                },
                "run" : {"template" : "chartjs/run-bar-livechart-val.js"}
            },
            {
                "type" : "Widget",
                "mode" : "Value",
                "dbName" : "Main",
                "key" : "networks_rx",
                "init" :
                {
                    "template" : "chartjs/init-bar-livechart-val.js",
                    "defaultsForVariables" :
                    {
                        "LABEL" : "RX",
                        "COLOR" : "green"
                    }
                },
                "run" : {"template" : "chartjs/run-bar-livechart-val.js"}
            }
        ]
    }
]
